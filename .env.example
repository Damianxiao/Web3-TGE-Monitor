# 环境配置示例文件
# 复制此文件为 .env 并填入实际配置

# 数据库配置
DATABASE_URL=mysql+aiomysql://root:123456@localhost:3306/web3_tge_monitor
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=123456
MYSQL_DB=web3_tge_monitor

# AI API配置
AI_API_BASE_URL=api.gpt.ge
AI_API_KEY=your_api_key_here
AI_MODEL=gpt-4o
AI_MAX_TOKENS=1688
AI_TEMPERATURE=0.5

# 应用配置
APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=true
LOG_LEVEL=INFO

# Redis配置（可选，用于缓存）
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# MediaCrawler配置路径
MEDIACRAWLER_PATH=../MediaCrawler

# 爬虫配置
CRAWLER_MAX_PAGES=5
CRAWLER_DELAY_SECONDS=3
DATA_RETENTION_DAYS=30

# Web3关键词配置
WEB3_KEYWORDS=TGE,代币发行,空投,IDO,新币上线,DeFi,Web3项目,撸毛,开启测试网,速撸

# 微博平台配置 (Weibo)
# 微博Cookie获取步骤:
# 1. 浏览器打开 https://m.weibo.cn 并登录
# 2. 按F12打开开发者工具 -> Network标签
# 3. 刷新页面，点击任意请求查看Request Headers
# 4. 复制Cookie完整值填入下方
WEIBO_COOKIE=""
WEIBO_SEARCH_TYPE="综合"  # 综合/实时/热门/视频
WEIBO_MAX_PAGES=10
WEIBO_RATE_LIMIT=60  # 请求间隔(秒)
WEIBO_ENABLED=true
WEIBO_LOGIN_METHOD="cookie"  # cookie/qrcode
WEIBO_HEADLESS=true  # 二维码模式使用false